---
import Categories from "./Categories.astro";
import DateString from "./DateString.astro";
import Newspaper from "astro-heroicons/outline/Newspaper.astro";
import Clock from "astro-heroicons/outline/Clock.astro";

interface Props {
  pubDate: string | undefined;
  categories: string[];
  readingTime: number;
  area: string;
}

const { categories, pubDate, readingTime, area } = Astro.props;
---

<div class="mb-7 text-gray-600 flex items-center justify-between">
  <div class="flex-1 flex flex-wrap items-center">
    <Newspaper class="w-5 h-5 mr-1" />
    <div class="mr-1">Gepostet</div>
    {
      categories && (
        <div class="mr-1">
          in
          <Categories categories={categories} area={area} />
        </div>
      )
    }
    {pubDate && <DateString date={new Date(pubDate)} />}
  </div>
  <div class="flex items-center space-x-1">
    <Clock class="w-5 h-5" />
    <div>Lesezeit: {Math.ceil(readingTime)} min</div>
  </div>
</div>
