---
import Settings from "../settings.json";

interface Props {
  categories: string[];
  area: string;
}

const { categories, area } = Astro.props;
---

<ul class="comma-list">
  {
    categories.map((category: string) => (
      <li>
        <a
          href={"/" + area + "/category/" + category}
          class="border-b border-prime work:border-second -mb-[1px] text-gray-600 work:text-gray-400 hover:bg-prime hover:work:bg-second hover:work:text-gray-800"
        >
          {Settings.categories[category as keyof typeof Settings.categories] ??
            category}
        </a>
      </li>
    ))
  }
</ul>
